<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.apache.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="info.jongwoo.Boot_pj_01.mapper.UserMapper">

    <select id="userList" resultType="info.jongwoo.Boot_pj_01.domain.UserDTO">
        SELECT * FROM users
    </select>

    <select id="loginCheck" parameterType="info.jongwoo.Boot_pj_01.domain.UserDTO" resultType="info.jongwoo.Boot_pj_01.domain.UserDTO">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <insert id="userInsert" parameterType="info.jongwoo.Boot_pj_01.domain.UserDTO">
        insert into users
        (id, password)
        values
        (#{id, jdbcType=VARCHAR} , #{password, jdbcType=VARCHAR})
    </insert>

</mapper>